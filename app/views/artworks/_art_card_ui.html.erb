<div class="art-card card mx-auto" id='art-card-<%= artwork.id %>' data-artwork-id='<%= artwork.id %>'>
  <div class='art-image-container'>
    <%= image_tag artwork.art_image.thumb.url, alt: 'image missing', draggable: false, class: 'img-fluid' %>
  </div>
  <div class="card-body">
    <%= link_to artwork do %>
        <h4 class="card-title"><%= artwork.title %></h4>
    <% end %>
    <h5 class="card-title"><%= artwork.artist %></h5>
    <%= up_vote(artwork) %>
    <%= down_vote(artwork) %>
  </div>

  <%= form_for artwork, namespace: 'upvote', html: {class: 'upvote-form'}, url: upvote_artwork_url(artwork), remote: true do |f| %>
    <%= f.submit %>
  <% end %>
  <%= form_for artwork, namespace: 'downvote', html: {class: 'downvote-form'}, url: downvote_artwork_url(artwork), remote: true do |f| %>
  <%= f.submit %>
  <% end %>
</div>
